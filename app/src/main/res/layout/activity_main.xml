<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/home_view_pager"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/rg_main"
            android:layout_height="0dp"/>

    <RadioGroup
            android:id="@+id/rg_main"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">

        <RadioButton
                android:id="@+id/rb_main_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_main_home"
                android:gravity="center"
                android:text="首页"
                android:checked="true"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:textColor="@drawable/color_main_tab"
                android:textSize="10sp"/>

        <RadioButton
                android:id="@+id/rb_main_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_main_home"
                android:gravity="center"
                android:text="文章"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:textColor="@drawable/color_main_tab"
                android:textSize="10sp"/>

        <RadioButton
                android:id="@+id/rb_main_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_main_home"
                android:gravity="center"
                android:text="项目"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:textColor="@drawable/color_main_tab"
                android:textSize="10sp"/>

        <RadioButton
                android:id="@+id/rb_main_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_main_home"
                android:gravity="center"
                android:text="我的"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:textColor="@drawable/color_main_tab"
                android:textSize="10sp"/>

    </RadioGroup>

</android.support.constraint.ConstraintLayout>